<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FMMS.Views.PeoplePage"
             x:Name="RootPage"
             Title="Family Members">

    <ContentPage.Content>
        <VerticalStackLayout Padding="16" Spacing="12">

            <!-- Header -->
            <Label Text="Family Members"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Add / Update person row using Grid -->
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Entry Grid.Column="0"
                       Placeholder="First name"
                       Text="{Binding FirstName}" />

                <Entry Grid.Column="1"
                       Placeholder="Last name"
                       Text="{Binding LastName}" />

                <Button Grid.Column="2"
                        Text="{Binding SaveButtonText}"
                        Command="{Binding AddPersonCommand}" />
            </Grid>

            <!-- Search row using Grid -->
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Entry Grid.Column="0"
                       Placeholder="Search by name"
                       Text="{Binding SearchText}" />

                <Button Grid.Column="1"
                        Text="Search"
                        Command="{Binding SearchCommand}" />
            </Grid>

            <!-- Generate report button -->
            <Button Text="Generate Report"
                    Command="{Binding GenerateReportCommand}" />

            <!-- People list -->
            <CollectionView ItemsSource="{Binding People}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedPerson}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Uses Person.ToString() (FirstName + LastName) -->
                            <Label Grid.Column="0"
                                   Text="{Binding}"
                                   FontSize="18" />

                            <Button Grid.Column="1"
                                    Text="Delete"
                                    Command="{Binding BindingContext.DeleteCommand, Source={x:Reference RootPage}}"
                                    CommandParameter="{Binding .}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
