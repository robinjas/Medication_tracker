<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FMMS.Views.MedicationsPage"
             x:Name="RootPage"
             Title="Medications">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="12">

                <!-- Header -->
                <Label Text="Medication Management"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <!-- Person Selection -->
                <Label Text="Select Family Member:" FontSize="16" FontAttributes="Bold" />
                <Picker ItemsSource="{Binding People}"
                        SelectedItem="{Binding SelectedPerson}"
                        ItemDisplayBinding="{Binding .}"
                        Title="Choose person..."
                        BackgroundColor="LightGray" />

                <!-- Medication Form -->
                <Border StrokeThickness="1" Stroke="LightGray" Padding="12" Margin="0,8" StrokeShape="RoundRectangle 8">
                    <Border.Content>
                        <VerticalStackLayout Spacing="8">
                        <Label Text="Medication Details" FontSize="18" FontAttributes="Bold" />

                        <!-- Basic Info Row -->
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Entry Grid.Column="0"
                                   Placeholder="Medication name"
                                   Text="{Binding Name}" />
                            <Entry Grid.Column="1"
                                   Placeholder="Dosage (e.g., 10mg)"
                                   Text="{Binding Dosage}" />
                        </Grid>

                        <!-- Instructions -->
                        <Entry Placeholder="Instructions (e.g., Take with food)"
                               Text="{Binding Instructions}" />

                        <!-- Doctor and Pharmacy Row -->
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Entry Grid.Column="0"
                                   Placeholder="Prescribing doctor"
                                   Text="{Binding PrescribingDoctor}" />
                            <Entry Grid.Column="1"
                                   Placeholder="Pharmacy"
                                   Text="{Binding Pharmacy}" />
                        </Grid>

                        <!-- Supply Management Row 1 -->
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="Current Supply" FontSize="12" />
                                <Entry Text="{Binding CurrentSupply}"
                                       Keyboard="Numeric" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Low Threshold" FontSize="12" />
                                <Entry Text="{Binding LowSupplyThreshold}"
                                       Keyboard="Numeric" />
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Pills Per Dose -->
                        <VerticalStackLayout>
                            <Label Text="Pills Per Dose" FontSize="12" />
                            <Entry Text="{Binding PillsPerDose}"
                                   Keyboard="Numeric"
                                   Placeholder="1" />
                            <Label Text="Number of pills to take each time you record a dose"
                                   FontSize="11"
                                   TextColor="Gray" />
                        </VerticalStackLayout>

                        <!-- Supply Management Row 2 (REFILLS) -->
                        <Grid ColumnSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="Refills Authorized" FontSize="12" />
                                <Entry Text="{Binding RefillsAuthorized}"
                                       Keyboard="Numeric" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Refills Remaining" FontSize="12" />
                                <Entry Text="{Binding RefillsRemaining}"
                                       Keyboard="Numeric" />
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Active Status -->
                        <HorizontalStackLayout Spacing="8">
                            <CheckBox IsChecked="{Binding IsActive}" />
                            <Label Text="Active medication" VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- Daily Schedule Times -->
                        <Border StrokeThickness="1" Stroke="LightBlue" Padding="8" Margin="0,4" StrokeShape="RoundRectangle 4">
                            <Border.Content>
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Daily Schedule Times" FontSize="16" FontAttributes="Bold" />
                                    <Label Text="Set times to take this medication every day:" FontSize="12" TextColor="Gray" />
                                    
                                    <CollectionView ItemsSource="{Binding ScheduleTimes}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnSpacing="8" Margin="0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TimePicker Grid.Column="0"
                                                                Time="{Binding Time, Mode=TwoWay}"
                                                                Format="t" />
                                                    <Button Grid.Column="1"
                                                            Text="Remove"
                                                            Command="{Binding BindingContext.RemoveScheduleTimeCommand, Source={x:Reference RootPage}}"
                                                            CommandParameter="{Binding .}"
                                                            BackgroundColor="#DC3545"
                                                            TextColor="White"
                                                            FontSize="12"
                                                            Padding="8,4" />
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                    
                                    <Button Text="Add Time"
                                            Command="{Binding AddScheduleTimeCommand}"
                                            BackgroundColor="#28A745"
                                            TextColor="White"
                                            FontSize="12" />
                                </VerticalStackLayout>
                            </Border.Content>
                        </Border>

                        <!-- Notes -->
                        <Entry Placeholder="Notes (optional)"
                               Text="{Binding Notes}" />

                        <!-- Save Button -->
                        <Button Text="{Binding SaveButtonText}"
                                Command="{Binding SaveMedicationCommand}"
                                BackgroundColor="#4A90E2"
                                TextColor="White" />
                    </VerticalStackLayout>
                    </Border.Content>
                </Border>

                <!-- Search Bar -->
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Entry Grid.Column="0"
                           Placeholder="Search medications..."
                           Text="{Binding SearchText}" />
                    <Button Grid.Column="1"
                            Text="Search"
                            Command="{Binding SearchCommand}"
                            BackgroundColor="#4A90E2"
                            TextColor="White" />
                </Grid>

                <!-- Filter Buttons -->
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Text="Show All"
                            Command="{Binding ShowAllCommand}"
                            BackgroundColor="#6C757D"
                            TextColor="White"
                            FontSize="12" />
                    <Button Grid.Column="1"
                            Text="Low Supply"
                            Command="{Binding ShowLowSupplyCommand}"
                            BackgroundColor="#FFC107"
                            TextColor="Black"
                            FontSize="12" />
                    <Button Grid.Column="2"
                            Text="Expired"
                            Command="{Binding ShowExpiredCommand}"
                            BackgroundColor="#DC3545"
                            TextColor="White"
                            FontSize="12" />
                </Grid>

                <!-- Medications List -->
                <Label Text="Medications" FontSize="18" FontAttributes="Bold" Margin="0,8,0,0" />

                <CollectionView ItemsSource="{Binding Medications}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedMedication}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="1" 
                                   Stroke="LightGray" 
                                   Padding="12" 
                                   Margin="0,4"
                                   StrokeShape="RoundRectangle 8">
                                <Border.Content>
                                    <Grid RowSpacing="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Medication Name and Dosage -->
                                        <HorizontalStackLayout Grid.Row="0" Spacing="8">
                                            <Label Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center" />
                                            <Label Text="{Binding Dosage}"
                                                   FontSize="16"
                                                   TextColor="Gray"
                                                   VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                        <!-- Instructions and Supply Info -->
                                        <VerticalStackLayout Grid.Row="1" Spacing="2">
                                            <Label Text="{Binding Instructions}"
                                                   FontSize="14"
                                                   TextColor="Gray" />
                                            <HorizontalStackLayout Spacing="4">
                                                <Label Text="Supply:"
                                                       FontSize="12"
                                                       FontAttributes="Bold" />
                                                <Label Text="{Binding CurrentSupply}"
                                                       FontSize="12" />
                                                <Label Text="doses"
                                                       FontSize="12" />
                                                <Label Text="|"
                                                       FontSize="12"
                                                       Margin="4,0" />
                                                <Label Text="Refills:"
                                                       FontSize="12"
                                                       FontAttributes="Bold" />
                                                <Label Text="{Binding RefillsRemaining}"
                                                       FontSize="12" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <!-- Action Buttons -->
                                        <Grid Grid.Row="2" ColumnSpacing="4" Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.Column="0"
                                                    Text="Take Dose"
                                                    Command="{Binding BindingContext.TakeDoseCommand, Source={x:Reference RootPage}}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="#28A745"
                                                    TextColor="White"
                                                    FontSize="12"
                                                    Padding="8,4" />
                                            <Button Grid.Column="1"
                                                    Text="Refill"
                                                    Command="{Binding BindingContext.RefillCommand, Source={x:Reference RootPage}}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="#17A2B8"
                                                    TextColor="White"
                                                    FontSize="12"
                                                    Padding="8,4" />
                                            <Button Grid.Column="2"
                                                    Text="Delete"
                                                    Command="{Binding BindingContext.DeleteCommand, Source={x:Reference RootPage}}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="#DC3545"
                                                    TextColor="White"
                                                    FontSize="12"
                                                    Padding="8,4" />
                                        </Grid>
                                    </Grid>
                                </Border.Content>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
